{
	"extends": "eslint:recommended",
	"env": {
		"es2021": true,
		"node": true
	},
	"ignorePatterns": [
		"node_modules"
	],
	"rules": {
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "none",
				"ignoreRestSiblings": false
			}
		]
	},
	"overrides": [
		{
			"files": [
				"lib/runner.js"
			],
			"env": {
				"es2021": true,
				"browser": true
			}
		}
	]
}
